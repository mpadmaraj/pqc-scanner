{
  "version": 2,
  "name": "pqc-vulnerability-scanner",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "buildCommand": "npm run build && cp -r dist/public/* .",
  "cleanUrls": true,
  "trailingSlash": false
}